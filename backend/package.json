{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend service for AWS Serverless vs Kubernetes Cost Estimator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --target=node18 --outfile=dist/lambda.js --external:aws-sdk",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:only": "jest --coverage=false",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
